@{
    ViewBag.Title = "Filtrar";
}

<style>
    h2 {
        margin-top: 0;
    }

    .filter-form {
        margin-bottom: 20px;
    }

        .filter-form label {
            display: block;
            margin-bottom: 5px;
        }

        .filter-form input[type="number"] {
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .filter-form input[type="submit"] {
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .filter-form input[type="submit"]:hover {
                background-color: #45a049;
            }

    .no-products {
        margin-top: 20px;
        color: #f00;
        font-weight: bold;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<h2>Filtrar Venta</h2>

<div class="filter-form">
    @using (Html.BeginForm("Filtrar", "Stock", FormMethod.Post))
    {
        <label for="presupuesto">Presupuesto del cliente:</label>
        <input type="number" id="presupuesto" name="presupuesto" min="0" max="1000000" step="1" required />
        <input type="submit" value="Filtrar" />
    }
</div>
